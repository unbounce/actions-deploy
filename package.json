{
  "name": "actions",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "ncc build src/index.ts --out dist/",
    "test": "jest",
    "test:ci": "npm test -- --coverage",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "lint:format": "prettier --check 'src/**/*.ts' 'src/**/*.tsx'",
    "format": "prettier --write 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@unbounce/commons-tsconfig-node": "^1.3.3",
    "@unbounce/commons-tslint": "^1.1.2",
    "@zeit/ncc": "^0.22.1",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@octokit/rest": "^17.1.4",
    "probot": "^9.11.2",
    "probot-actions-adapter": "^1.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --config tslint.json --project tsconfig.json --fix",
      "prettier --write"
    ]
  }
}
